<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="test.minip.RegisterActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/remailet"
        android:layout_marginTop="30dp"
        android:hint="Email ID"
        android:maxLines="1"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:inputType="textEmailAddress"

        android:drawableStart="@drawable/ic_mail_outline_black_24dp"
        android:drawablePadding="15dp"


        android:typeface="serif"

        android:background="@drawable/roundededittexttop"
        android:padding="@dimen/activity_vertical_margin"


        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ruseret"
        android:hint="Username"
        android:maxLines="1"
        android:layout_below="@+id/remailet"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:inputType="text"

        android:drawableStart="@drawable/ic_account_circle_black_24dp"
        android:drawablePadding="15dp"


        android:typeface="serif"
        android:background="@drawable/roundededittextmiddle"
        android:padding="@dimen/activity_vertical_margin"

/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/rpasset"
        android:hint="Password"
        android:layout_below="@+id/ruseret"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:maxLines="1"

        android:drawableStart="@drawable/ic_lock_black_24dp"
        android:drawablePadding="15dp"

        android:typeface="serif"

        android:background="@drawable/roundededittextmiddle"
        android:padding="@dimen/activity_vertical_margin"

/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/repasset"
        android:hint="Confirm Password"
        android:layout_below="@+id/rpasset"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:maxLines="1"

        android:drawableStart="@drawable/ic_lock_black_24dp"
        android:drawablePadding="15dp"

        android:typeface="serif"

        android:background="@drawable/roundededittextbottom"
        android:padding="@dimen/activity_vertical_margin"


/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Registration"
        android:id="@+id/textView"
        android:typeface="serif"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/registrationb"
        android:background="@drawable/roundedbuttongreen"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_below="@+id/repasset"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"

        android:typeface="serif"

        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"/>
</RelativeLayout>
