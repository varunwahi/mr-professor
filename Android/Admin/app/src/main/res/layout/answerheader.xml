<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColor="#000000"
        android:id="@+id/titletv"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingBottom="@dimen/activity_vertical_margin"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Content of Doubt"
        android:id="@+id/contenttv"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColor="#7b7b7b"
        android:layout_below="@+id/titletv"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingBottom="@dimen/activity_vertical_margin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="By : "
        android:id="@+id/bytv"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_below="@+id/novtv"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/novtv"
        android:paddingBottom="@dimen/activity_vertical_margin"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Votes : "
        android:id="@+id/novtv"
        android:layout_below="@+id/contenttv"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/contenttv"
        android:maxLines="1"
        android:ellipsize="end"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Answers"
        android:id="@+id/textView4"
        android:textColor="#000000"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/bytv"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/bytv"
        android:textAlignment="center"
        android:paddingBottom="@dimen/activity_vertical_margin"/>

</RelativeLayout>
