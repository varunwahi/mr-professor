<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"


>



    <TextView
        android:id="@+id/linkvotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:typeface="monospace"
        android:layout_alignParentStart="true"

        android:maxLines="1"
        android:ellipsize="end"
        android:ems="2"

        android:layout_marginTop="@dimen/activity_vertical_margin"


        android:layout_marginLeft="@dimen/activity_vertical_margin"

        />

    <TextView
        android:id="@+id/linktitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"

        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"


        android:layout_toEndOf="@+id/linkvotes"

        android:maxLines="1"
        android:ellipsize="end"

        android:layout_marginTop="@dimen/activity_vertical_margin"

        android:layout_marginRight="@dimen/activity_vertical_margin"


        />

    <TextView
        android:id="@+id/linkcontent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Content"
        android:textAppearance="?android:attr/textAppearanceMedium"

        android:layout_below="@+id/linktitle"

        android:layout_toEndOf="@+id/linkvotes"


        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="#7b7b7b"

        android:layout_marginRight="@dimen/activity_vertical_margin"/>



    <TextView
        android:id="@+id/linkby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By : "
        android:textAppearance="?android:attr/textAppearanceSmall"

        android:layout_below="@+id/linkcontent"

        android:layout_toEndOf="@+id/linkvotes"

        android:maxLines="1"
        android:ellipsize="end"

        android:layout_marginRight="@dimen/activity_vertical_margin"


        />


    <ImageButton
        android:id="@+id/thumbsdownb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/ic_thumb_down_black_24dp"

        android:layout_below="@+id/linkcontent"

        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"

        android:layout_marginBottom="@dimen/activity_vertical_margin"
        />

    <ImageButton
        android:id="@+id/thumbsupb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_thumb_up_black_24dp"

        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"

        android:layout_marginRight="@dimen/activity_vertical_margin"


        android:layout_alignTop="@+id/thumbsdownb"
        android:layout_toStartOf="@+id/thumbsdownb"
/>

    <ImageButton
        android:id="@+id/deleteb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_delete_black_24dp"

        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"

        android:layout_marginRight="@dimen/activity_vertical_margin"


        android:layout_alignTop="@+id/thumbsdownb"
        android:layout_toStartOf="@+id/thumbsupb"

        android:visibility="invisible"/>









</RelativeLayout>